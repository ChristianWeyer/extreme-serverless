{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "save": {
      "matchCondition": {
        "route": "/api/save",
        "methods": [
          "POST"
        ]
      },
      "backendUri": "https://%WEBSITE_HOSTNAME%/api/addchatmessage"
    },
    "config": {
      "matchCondition": {
        "route": "/api/config",
        "methods": [
          "GET",
          "OPTIONS"
        ]
      },
      "backendUri": "https://%WEBSITE_HOSTNAME%/api/getsignalrconfiguration"
    },
    "default": {
      "matchCondition": {
        "route": "",
        "methods": [
          "GET",
          "OPTIONS"
        ]
      },
      "backendUri": "https://%WEBSITE_HOSTNAME%/api/fileserver?file=index.html"
    },
    "scripts": {
      "matchCondition": {
        "route": "scripts/{*path}",
        "methods": [
          "GET",
          "OPTIONS"
        ]
      },
      "backendUri": "https://%WEBSITE_HOSTNAME%/api/fileserver?file=scripts/{path}"
    },
    "styles": {
      "matchCondition": {
        "route": "css/{*path}",
        "methods": [
          "GET",
          "OPTIONS"
        ]
      },
      "backendUri": "https://%WEBSITE_HOSTNAME%/api/fileserver?file=css/{path}"
    }
  }
}